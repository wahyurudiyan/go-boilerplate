APPLICATION_NAME=example-some-service
APPLICATION_ENVRIONMENT=canary

# REST Server Configuration
REST_PORT=8080

# Database Connection Parameter
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_DRIVER=postgres
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=Supersecret!
DATABASE_NAME=svc_users
DATABASE_PARSETIME=true

# Connection parameters
REDIS_ADDR=redis.example.com:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_IS_CLUSTER=false
REDIS_CLUSTER_ADDR=redis-node1:6379,redis-node2:6379,redis-node3:6379

# Connection pool settings
REDIS_POOL_SIZE=20
REDIS_MIN_IDLE_CONNS=10
REDIS_POOL_TIMEOUT=5s
REDIS_MAX_RETRIES=3
REDIS_MIN_RETRY_BACKOFF=8ms
REDIS_MAX_RETRY_BACKOFF=2s

# Connection health and monitoring
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_IDLE_TIMEOUT=5m
REDIS_IDLE_CHECK_FREQUENCY=1m

# TLS Configuration
REDIS_ENABLE_TLS=true
REDIS_TLS_INSECURE_SKIP_VERIFY=false

# Cluster specific configurations
REDIS_MAX_REDIRECTS=8
REDIS_ROUTE_BY_LATENCY=true
REDIS_ROUTE_RANDOMLY=false
REDIS_READ_ONLY=false