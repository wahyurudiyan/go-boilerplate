APPLICATION_NAME=service-user
APPLICATION_VERSION=v0.0.1
APPLICATION_TRIBE_NAME=user
APPLICATION_ENVRIONMENT=canary

TELEMETRY_METER_INTERVAL=3s
TELEMETRY_ENABLE_RUNTIME_METER=true

# REST Server Configuration
REST_PORT=8080

# Database Connection Parameter
USER_DATABASE_NAME=svc_users
USER_DATABASE_HOST=localhost
USER_DATABASE_PORT=5432
USER_DATABASE_DRIVER=postgres
USER_DATABASE_CHARSET=utf8
USER_DATABASE_USERNAME=postgres
USER_DATABASE_PASSWORD=Supersecret!
USER_DATABASE_PARSETIME=true

# Database Pool Configuration
USER_DATABASE_MAX_OPEN_CONNECTION=25
USER_DATABASE_MAX_IDLE_CONNECTION=10
USER_DATABASE_MAX_IDLE_TIME_CONNECTION=300s
USER_DATABASE_MAX_LIFETIME_CONNECTION=3600s

# Connection parameters
USER_REDIS_ADDR=redis.example.com:6379
USER_REDIS_PASSWORD=your-redis-password
USER_REDIS_DB=0
USER_REDIS_IS_CLUSTER=false
USER_REDIS_CLUSTER_ADDR=redis-node1:6379,redis-node2:6379,redis-node3:6379

# Connection pool settings
USER_REDIS_POOL_SIZE=20
USER_REDIS_MIN_IDLE_CONNS=10
USER_REDIS_POOL_TIMEOUT=5s
USER_REDIS_MAX_RETRIES=3
USER_REDIS_MIN_RETRY_BACKOFF=8ms
USER_REDIS_MAX_RETRY_BACKOFF=2s

# Connection health and monitoring
USER_REDIS_DIAL_TIMEOUT=5s
USER_REDIS_READ_TIMEOUT=3s
USER_REDIS_WRITE_TIMEOUT=3s
USER_REDIS_IDLE_TIMEOUT=5m
USER_REDIS_IDLE_CHECK_FREQUENCY=1m

# TLS Configuration
USER_REDIS_ENABLE_TLS=true
USER_REDIS_TLS_INSECURE_SKIP_VERIFY=false

# Cluster specific configurations
USER_REDIS_MAX_REDIRECTS=8
USER_REDIS_ROUTE_BY_LATENCY=true
USER_REDIS_ROUTE_RANDOMLY=false
USER_REDIS_READ_ONLY=false